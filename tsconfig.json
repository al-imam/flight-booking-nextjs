{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "shadcn/*": ["shadcn/*"],
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$hooks": ["src/hooks"],
      "$hooks/*": ["src/hooks/*"],
      "$context": ["src/context"],
      "$context/*": ["src/context/*"],
      "$store": ["src/store"],
      "$store/*": ["src/store/*"],
      "$icons": ["src/icons"],
      "$icons/*": ["src/icons/*"],
      "$assets/*": ["src/assets/*"],
      "$interface": ["src/interface"],
      "$interface/*": ["src/interface/*"],
      "$/*": ["src/*"],
      "$backend/*": ["backend/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
